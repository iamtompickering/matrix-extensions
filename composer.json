{
    "name": "tom-pickering/craft-matrix-extensions",
    "description": "Some handy little extensions for your Matrix blocks.",
    "type": "craft-plugin",
    "license": "proprietary",
    "support": {
        "email": "iamtompickering@gmail.com",
        "issues": "https://github.com/iamtompickering/matrix-extensions/issues?state=open",
        "source": "https://github.com/iamtompickering/matrix-extensions",
        "docs": "https://github.com/iamtompickering/matrix-extensions",
        "rss": "https://github.com/iamtompickering/matrix-extensions/releases.atom"
    },
    "require": {
        "php": ">=8.0.2",
        "craftcms/cms": "^4.6.0"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "tompickering\\craftmatrixextensions\\": "src/"
        }
    },
    "extra": {
        "handle": "matrix-extensions",
        "name": "Matrix Extensions",
        "developer": "Tom Pickering",
        "documentationUrl": "https://github.com/iamtompickering/matrix-extensions",
        "class": "tompickering\\craftmatrixextensions\\MatrixExtensions"
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0.2"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}

